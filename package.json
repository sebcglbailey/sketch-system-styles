{
  "name": "system-styles",
  "description": "Generate all the text styles you'll need, including alignment and colour.",
  "version": "0.1.0",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "system-styles",
    "manifest": "src/manifest.json",
    "main": "system-styles.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.2"
  },
  "author": "Seb Bailey <sebastian@clearscore.com>",
  "repository": "https://github.com/sebcglbailey/sketch-system-styles"
}
